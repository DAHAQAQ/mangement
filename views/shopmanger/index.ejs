<%- include ../layout/head.ejs%>

<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12">
        <span class="d-flex align-items-center purchase-popup">
          <p>
            现在你看到的是各种数据和概况，滚动查看信息，点击导航查看更多信息或进行管理
          </p>
          <a
            href="https://github.com/BootstrapDash/PurpleAdmin-Free-Admin-Template"
            target="_blank"
            class="btn ml-auto download-button"
            >管理用户</a
          >
          <a
            href="#product/purple-bootstrap-4-admin-template/"
            target="_blank"
            class="btn purchase-button"
            >更新商品</a
          >
          <i class="mdi mdi-close popup-dismiss"></i>
        </span>
      </div>
    </div>
    <div class="row shop-wrapper">
      <%for(let i=0;i<shops.length;i++){%>
      <div class="col-md-3 stretch-card grid-margin">
        <div class="card  card-img-holder text-white">
          <div class="card-body">
            <a href="/shopmanger/detail?id=<%=shops[i]._id%>" title="点击查看详情">
              <img src="<%=shops[i].shopImg%>" alt="" />
            </a>
            <p class="text">
              <%=shops[i].shopIntro%>
            </p>
            <div class="manger-wrapper">
              <a href="/shopmanger/deleteshop?id=<%=shops[i]._id%>" class="delete">删除</a>
              <a href="/shopmanger/editshop?id=<%=shops[i]._id%>" class="update">更新</a>
            </div>
          </div>
        </div>
      </div>
      <%}%>
    </div>
    <!-- 分页布局开始 -->
    <div class="paging-wrapper">
      <a href="javascript:;" class="paging">上一页</a>
      <a href="#">1</a>
      <a href="#">2</a>
      <a href="#">3</a>
      <a href="#">4</a>
      <a href="#">5</a>
      <a href="javascript:;" class="paging">下一页</a>
    </div>
    <!-- 分页布局结束 -->
  </div>

  <!-- 底部版权面板开始 -->
  <footer class="footer">
    <div class="d-sm-flex justify-content-center justify-content-sm-between">
      <span
        class="text-muted text-center text-sm-left d-block d-sm-inline-block"
        >Copyright © 2019 <a href="" target="_blank">BootstrapDash</a>. All
        rights reserved.
      </span>
    </div>
  </footer>
  <!-- 底部版权面板结束 -->
</div>
<%- include ../layout/footer.ejs%>
